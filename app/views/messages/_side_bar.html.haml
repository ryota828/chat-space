.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      .side-bar__user-name__box__name
        =current_user.name
      .side-bar__user-name__box__menu
        %ul
        %li
          = link_to new_group_path, class: "side-bar__user-name__box__menu__icon--edit" do
            = icon('fas', 'edit',  class: "side-bar__user-name__box__menu__icon")
        %li
          = link_to edit_user_path(current_user), class: "side-bar__user-name__box__menu__icon--cog" do
            = icon('fas', 'cog',  class: "side-bar__user-name__box__menu__icon")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to group_messages_path(group) do
          .side-bar__group-list__group__group-name
            =group.name
          .side-bar__group-list__group__latest-message
